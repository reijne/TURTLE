#!/bin/csh
../../bin/gamess << EOF
file ed2 mfged2 keep
file ed3 mfged3 keep
TITLE\HCCH/CCH2 . RHF 6-31G TS  energy =  -76.693259650542 au
ZMAT ANGS\C\ C 1 L1\ H 2 L2  1 A1
X 2 1.0 1 90.0 3 180.0\ H 2 L3  4 A2   1 180.0
VARIABLES
L1 1.24054 TYPE 3
L2 1.65694 TYPE 3
L3 1.06318 TYPE 3
A1 60.3568 TYPE 3
A2 60.3568 TYPE 3
END 
basis 6-31g
RUNTYPE SADDLE
ENTER 
EOF
../../bin/gamess << EOF
file ed2 mfged2 keep
file ed3 mfged3 keep
RESTART 
TITLE\HCCH/CCH2 6-31G DFT/B3LYP   energy =  -77.219625949425 au
ZMAT ANGS\C\ C 1 L1\ H 2 L2  1 A1
X 2 1.0 1 90.0 3 180.0\ H 2 L3  4 A2   1 180.0
VARIABLES
L1 1.24054 TYPE 3
L2 1.65694 TYPE 3
L3 1.06318 TYPE 3
A1 60.3568 TYPE 3
A2 60.3568 TYPE 3
END 
basis 6-31g
RUNTYPE SADDLE
XTOL 0.002
dft b3lyp
ENTER
EOF
