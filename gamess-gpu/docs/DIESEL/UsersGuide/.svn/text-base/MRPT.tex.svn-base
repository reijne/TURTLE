\subsubsection{User Input and Keywords}
\label{MRPTInput}
\label{MRPTKeywords}
\begin{tabular}{p{3cm}|c|p{1.5cm}|p{1.5cm}|p{5cm}}
&sta- &de-&argument &\\
keyword	&tus&fault&type &description\\[5pt]
\hline&&&&\\[-9pt]
{\tt Selection\-Thresholds}	&req. &-- &\key{floatSet} &
a set of thresholds in Hartree for selection procedure\tnl
{\tt Roots}	&opt. &\{ 1 \} &\key{numSet} &
set of roots to be used in the selection\tnl
{\tt ProjectionMode}	&opt. &"no0" &"no0", "0Complement" &
\tnl
{\tt Inhomogenity}	&opt. & "Psi0" ($|0\rangle$) &\key{floatnum}, "Psi0" &
inhomogenity in system of linear equations\tnl
{\tt calcMP3}	&opt. &no &\key{boolean} &
flag if MP3 energies should be calculated\tnl
\end{tabular}



\subsubsection{Input Example}


\begin{footnotesize}
\begin{verbatim}
Roots                = { 1 2 3 4 }
SelectionThresholds  = { 0.001 0.0001 1e-05 1e-06 }
ProjectionMode       = no0
Inhomogenity         = Psi0
calcMP3              = no
\end{verbatim}
\end{footnotesize}

