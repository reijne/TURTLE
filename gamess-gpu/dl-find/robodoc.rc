# Robodoc configuration file for the documentation of DL-FIND
#
items:
    NAME
    FUNCTION
    SYNOPSIS
    INPUTS
    OUTPUTS
    COMMENTS
    DATA
    SIDE EFFECTS
    HISTORY
    BUGS
    COPYRIGHT
ignore items:
    HISTORY
    BUGS 
    COPYRIGHT
    SOURCE
source items:
    SYNOPSIS
preformatted items:
    DATA
format items:
    FUNCTION
    SIDE EFFECTS
options:
    --src .
    --doc doc
    --html
    --nosort
    --nodesc
    --multidoc
    --sections
    --index
    --toc
    --tabsize 8
    --syntaxcolors
    --documenttitle "DL-FIND Documentation"
    --nopre
    --css robodoc.css
headertypes:
    J  "Projects"          robo_projects    2
    F  "Files"             robo_files       1
    e  "Makefile Entries"  robo_mk_entries
    x  "System Tests"      robo_syst_tests
    q  Queries             robo_queries
ignore files:
    README
    CVS
    *.bak
    *~
    "a test_*"
accept files:
    *.f90
header separate characters:
    ,
header ignore characters:
    [
remark begin markers:
    /*
remark end markers:
    */
source line comments:
    //
keywords:
    if
    else
    end
    do
    end do
    select
    end select
    case
    while
    for
    subroutine
    call
